<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.moocclass.activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/viewpager_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_layout">

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/home_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorStroke"/>

    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/home_buttom_layout"
            android:layout_width="130dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/home_buttom_imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/comui_tab_home"/>

                <TextView
                    android:layout_below="@+id/home_buttom_imageView"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_centerHorizontal="true"
                    android:text="主页"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/home_buttom_layout"
            android:id="@+id/message_buttom_layout"
            android:layout_width="130dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/message_buttom_imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/comui_tab_message"/>

                <TextView
                    android:layout_below="@+id/message_buttom_imageView"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_centerHorizontal="true"
                    android:text="消息"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/message_buttom_layout"
            android:id="@+id/mine_buttom_layout"
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mine_buttom_imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/comui_tab_person"/>

                <TextView
                    android:layout_below="@+id/mine_buttom_imageView"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_centerHorizontal="true"
                    android:text="我的"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
